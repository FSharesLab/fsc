#! /bin/bash

VERSION_TAG=$1
VERSION_NO_SUFFIX="@VERSION_MAJOR@.@VERSION_MINOR@.@VERSION_PATCH@"
VERSION_SUFFIX="@VERSION_SUFFIX@"
VERSION="@VERSION_FULL@"
BUILD_DIR="@CMAKE_BINARY_DIR@"

VENDOR="@VENDOR@"
PROJECT="@PROJECT_NAME@"
DESC="@DESC@"
URL="@URL@"
EMAIL="@EMAIL@"

if [[ -z $1 ]]; then
   VERSION_TAG="dev"
elif [[ ${VERSION_TAG} != "dev" && ${VERSION_TAG} != "beta" && ${VERSION_TAG} != "dawn" && ${VERSION_TAG} != "release" ]]; then
  echo "Error, unknown package TAG. Use either ['dev', 'beta', 'dawn','release'] !"
  exit -1
fi

len=`echo "$2"|sed 's/[0-9]//g'|sed 's/-//g'`

if [[ -n $1 && -n $2 && -n $len ]]; then
  echo "Error, The version suffix must be a number, iput is $2!"
  exit -1
fi

export BUILD_DIR
export VERSION_TAG
export VERSION_NO_SUFFIX
export VERSION_SUFFIX
export VERSION
export VENDOR
export PROJECT
export DESC
export URL
export EMAIL

mkdir tmp

bash generate_deb.sh

BUILDSTATUS=$?

rm -r tmp

exit $BUILDSTATUS
